{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/vibrant-core/src",
  "projectType": "library",
  "tags": ["scope:vibrant"],
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/vibrant-core",
        "tsConfig": "packages/vibrant-core/tsconfig.lib.json",
        "project": "packages/vibrant-core/package.json",
        "entryFile": "packages/vibrant-core/src/index.ts",
        "external": ["react/jsx-runtime"],
        "format": ["esm", "cjs"],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "rollupConfig": "tools/config/rollup-config",
        "compiler": "babel",
        "assets": [
          {
            "glob": "packages/vibrant-core/README.md",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "native": {
          "outputPath": "dist/packages/vibrant-core-native",
          "project": "packages/vibrant-core/package.native.json",
          "moduleSuffixes": [".native", ""]
        }
      }
    },
    "typecheck": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "yarn tsc --project ./packages/vibrant-core/tsconfig.lib.json"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/vibrant-core/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/vibrant-core"],
      "options": {
        "jestConfig": "packages/vibrant-core/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "config": {
          "configFolder": "packages/vibrant-core/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/react",
        "outputPath": "dist/storybook/vibrant-core",
        "config": {
          "configFolder": "packages/vibrant-core/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "skipCommit": true,
        "trackDeps": true,
        "postTargets": [
          "vibrant-core:github",
          "vibrant-core:deploy",
          "vibrant-core:generate-native-package",
          "vibrant-core:deploy-native"
        ]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "generate-native-package": {
      "executor": "@class101/workspace-plugin:updateNativePackageJson",
      "options": {
        "packageJsonName": "package.json",
        "nativePackageJsonName": "package.native.json"
      }
    },
    "deploy-native": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "buildTarget": "native"
      }
    }
  }
}
