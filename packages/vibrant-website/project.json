{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/vibrant-website/src",
  "projectType": "application",
  "tags": ["scope:vibrant"],
  "targets": {
    "build": {
      "executor": "@nx-plus/docusaurus:browser",
      "options": {
        "outputPath": "dist/packages/vibrant-website"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["yarn tsc --project ./packages/vibrant-website/tsconfig.json"]
      }
    },
    "serve": {
      "executor": "@nx-plus/docusaurus:dev-server",
      "options": {
        "port": 3000,
        "host": "0.0.0.0"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/vibrant-website/**/*.{ts,tsx,js,jsx,mdx}"]
      }
    }
  }
}
