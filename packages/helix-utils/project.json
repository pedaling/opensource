{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/helix-utils/src",
  "projectType": "library",
  "tags": ["scope:helix"],
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/helix-utils",
        "main": "packages/helix-utils/src/index.ts",
        "tsConfig": "packages/helix-utils/tsconfig.lib.json",
        "assets": ["packages/helix-utils/*.md"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["yarn tsc --project ./packages/helix-utils/tsconfig.lib.json"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/helix-utils/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/helix-utils/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
