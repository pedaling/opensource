{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/design-system-icons/src",
  "projectType": "library",
  "tags": ["scope:design-system"],
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/design-system-icons",
        "tsConfig": "packages/design-system-icons/tsconfig.lib.json",
        "project": "packages/design-system-icons/package.json",
        "entryFile": "packages/design-system-icons/src/index.ts",
        "external": ["react/jsx-runtime"],
        "rollupConfig": "@nrwl/react/plugins/bundle-rollup",
        "compiler": "babel",
        "assets": [
          {
            "glob": "packages/design-system-icons/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/design-system-icons/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/design-system-icons"],
      "options": {
        "jestConfig": "packages/design-system-icons/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "config": {
          "configFolder": "packages/design-system-icons/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/react",
        "outputPath": "dist/storybook/design-system-icons",
        "config": {
          "configFolder": "packages/design-system-icons/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "generate-icons": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "npx @svgr/cli -d packages/design-system-icons/src/lib/Icon/generated --config-file packages/design-system-icons/.svgrrc.js --typescript packages/design-system-icons/assets/icons",
          "yarn nx workspace-generator generateIndex --sourceDirectory packages/design-system-icons/src/lib/Icon/generated --outIndexFile packages/design-system-icons/src/lib/Icon/generated/index.ts --wildcardAlias",
          "yarn eslint --fix packages/design-system-icons/src/lib/Icon/generated"
        ],
        "parallel": false
      }
    },
    "optimize-icons": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "npx svgo@latest -r packages/design-system-icons/assets/icons -o packages/design-system-icons/assets/icons --config packages/design-system-icons/svgo.config.js"
        ]
      }
    }
  }
}
