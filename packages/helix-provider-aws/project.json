{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/helix-provider-aws/src",
  "projectType": "library",
  "tags": ["scope:helix"],
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/helix-provider-aws",
        "main": "packages/helix-provider-aws/src/index.ts",
        "tsConfig": "packages/helix-provider-aws/tsconfig.lib.json",
        "assets": ["packages/helix-provider-aws/*.md"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["yarn tsc --project ./packages/helix-provider-aws/tsconfig.lib.json"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/helix-provider-aws/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/helix-provider-aws/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
