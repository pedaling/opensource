{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vibrant-ui/components": [
        "packages/vibrant-components/src/index.ts"
      ],
      "@vibrant-ui/core": ["packages/vibrant-core/src/index.ts"],
      "@vibrant-ui/icons": ["packages/vibrant-icons/src/index.ts"],
      "@vibrant-ui/theme": ["packages/vibrant-theme/src/index.ts"],
      "@vibrant-ui/utils": ["packages/vibrant-utils/src/index.ts"],
      "@vibrant-ui/utils/testing": ["packages/vibrant-utils/src/testing.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
