{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@class101/design-system-components": [
        "packages/design-system-components/src/index.ts"
      ],
      "@class101/design-system-core": [
        "packages/design-system-core/src/index.ts"
      ],
      "@class101/design-system-icons": [
        "packages/design-system-icons/src/index.ts"
      ],
      "@class101/design-system-theme": [
        "packages/design-system-theme/src/index.ts"
      ],
      "@class101/design-system-utils": [
        "packages/design-system-utils/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
